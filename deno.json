{
	"name": "@nc/http-types",
	"version": "0.1.0",
	"license": "MIT",
	"publish": {
		"include": [
			"src/",
			"README.md",
			"LICENSE"
		]
	},
	"exports": {
		".": "./src/mod.ts"
	},
	"tasks": {
		"build": "deno task \"build-*\" ; deno fmt",
		"build-methods": "deno run --allow-read=./build --allow-write=./src --no-prompt ./build/methods.ts",
		"build-headers": "deno run --allow-read=./build --allow-write=./src --no-prompt ./build/headers.ts",
		"build-status-codes": "deno run --allow-read=./build --allow-write=./src --no-prompt ./build/status-codes.ts",
		"dev": "deno test --watch src/mod.ts"
	},
	"imports": {
		"@nc/typegen": "jsr:@nc/typegen@^0.1.1",
		"@std/assert": "jsr:@std/assert@1",
		"@std/text": "jsr:@std/text@^1.0.12",
		"word-wrap": "npm:word-wrap@^1.2.5"
	},
	"fmt": {
		"include": [
			"src/",
			"build/"
		],
		"useTabs": true,
		"semiColons": false,
		"singleQuote": true,
		"indentWidth": 4
	},
	"lint": {
		"include": [
			"src/",
			"build/"
		]
	}
}
